{{!-- All comments template --}}
<div class="d-flex flex-column comments mt-5"><!--the container for all the comments should be in column form-->
    {{#if comments.length}}
    {{#each comments as |comment|}}
    <div class=" d-flex align-item-center mt-3 p-2">
        {{!-- profile icon --}}
        <div class="circular--landscape pb-3 ps-4">
            <img src="{{comment.owner.pic_hyperlink}}" alt="Picture of {{comment.owner.username}}">
        </div>

        {{!-- body --}}
        <div class="comment-main">
            <a href="../../profile/{{comment.owner.id}}" class="username-profile-link">
                <h5 class="ps-2 comment-username">{{comment.owner.username}}</h5>
            </a>
            <p class="comment-text pt-1 ps-2">
                {{comment.text}}
            </p>
            {{#if (ownsComment comment @root.user_id)}}
            {{!-- Delete Comment btn --}}
            <button id="delete-comment-btn">
                <img id="delete-comment-btn-img" class="delete-comment" data-id="{{comment.id}}"
                    src="/images/delete-Freepik-32px.png" alt="Trash Can">
            </button>

            {{!-- Edit Comment btn --}}
            <button id="edit-comment-btn">
                <img id="edit-comment-btn-img" class="edit-comment" data-id="{{comment.id}}"
                    src="/images/edit-Freepik-32px.png" alt="Trash Can" onclick="eventEditForm()" type="button">
            </button>

            {{!-- Edit Comment form --}}
            <div id="commentEditCard" class="card" style="display: none;">
                <div class="edit-comment-form card-body" style="display: block;">
                    <h3 class="card-header"> Edit {{comment.owner.username}}'s Comment</h3>
                    <form class="edit-comment-form">
                        <div class="input-box">
                            <input id="editcomment-text" name="comment.text" type="text" value="{{text}}"
                                class="form-input" required>
                            <label for="comment.text" class="form-label">{{text}}</label>
                        </div>
                    </form>
                    <button id="submitEditComment-btn" class="btn mt-3" type="submit">Submit Change to My
                        Comment</button>
                    <br> <br>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
    {{/each}}

    {{else}}
    <h2 class="text-center">No comments</h2>
    {{/if}}

</div>