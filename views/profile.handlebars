<div id="profile-page d-flex flex-column align-items-center">

  <div>
    <h1>Welcome {{username}}!</h1>
    <h2>What would you like to do?</h2>
      <div class="input-box-navigation-quarter">
        <select id="profile-navigation" onchange="navFormHandler(this.value)" name="profile-navigation" class="form-input">
            <option value="none" selected disabled hidden>Select an option</option>
            <option id="userNav" value="userNav">View My User Info</option>
            <option id="dogsNav" value="dogsNav">View My Dogs</option>
            <option id="eventsNav" value="eventsNav">View My Events</option>
        </select>
      </div>
  </div>



  <div id="owner-section" style="display: none;">
    <div class="d-flex flex-row">
      {{> ownercard}}
    </div>

    <div class="owner-btns">
      <a class="owner-anchor" style="text-decoration: none" href="profile/owner/{{id}}"> <button class="btn">
          Update Profile</button></a>
    </div>

  </div>
  <div id="dog-section" style="display: none;">
    {{> dogcard}}

    {{> adddog}}
  </div>


  <div id="events-section" style="display: none;">
    {{!-- Functionality to view all events created by user --}}
    {{> eventcard}}

    {{> addevent}}
  </div>

</div>

{{!-- Allows users navigate the profile page --}}
<script src="/js/profile-navigation.js"></script>

{{!-- Allows users to add another dog or delete a dog --}}
<script src="/js/profile-dog.js"></script>

{{!-- Allows users to add an event or delete an event --}}
<script src="/js/profile-event.js"></script>

