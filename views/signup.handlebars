<div>
  <h2 class="text-center">Register</h2>
  
  <form id="signup-form">
    <h3 class="mb-3">Let's Get to Know You</h3>

    <div class="mt-5 mb-1">
      <label for="ownerPic">Select a file:</label>
      <input type="file" id="ownerPic" name="ownerPic">
    </div>

    <div class="d-flex flex-row align-items-center">
      <div class="input-box-half">
        <input id="username-signup" type="text" required>
        <label>Username</label>
      </div>

      <div class="input-box-half">
        <span class="icon" onclick="showPassword()">
          <img src=" /images/secured-lock-freepik.png" alt="Lock pad icon">
        </span>
        <input id="password-signup" class="password" type="password" required>
        <label>Password</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center">
      <div class="input-box-half">
        <input id="first_name-signup" type="text" required>
        <label>First Name</label>
      </div>

      <div class="input-box-half">
        <input id="last_name-signup" type="text" required>
        <label>Last Name</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center">
      <div class="input-box-gender">
        <select name="gender" id="gender-signup" required>
          <option value="female">Female</option>
          <option value="male">Male</option>
          <option value="other">Other</option>
        </select>
        <label class="gender-label">Gender</label>
      </div>


      <div class="input-box-half">
        <input id="location_zip-signup" type="text" required>
        <label>Zip Code</label>
      </div>
    </div>

    <div>
      <div>
        <label id="description-label">Description</label>
      </div>
      <textarea id="description-signup" type="text" rows="6" required></textarea>
    </div>


    <h3 class="mb-3">Now Tell Us About Your Furry Friend</h3>

    <div class="mt-5 mb-1">
      <label for="dogPic">Select a file:</label>
      <input type="file" id="dogPic" name="dogPic">
    </div>

    <div class="d-flex flex-row align-items-center">
      <div class="input-box-half">

        <input id="dog-name-signup" type="text" required>
        <label>Name</label>
      </div>

      <div class="input-box-half">
        <input id="dog-age-signup" type="number" required>
        <label id="age-id">Age (in Years)</label>
      </div>
    </div>


    <div class="d-flex flex-row align-items-center">
      <div class="input-box-gender">
        <select id="dog-gender-signup">
          <option value="female">Female</option>
          <option value="male">Male</option>
        </select>
        <label class="gender-label">Gender</label>
      </div>

      <div class="input-box-half">
        <input id="dog-breed-signup" type="text" required>
        <label>Breed</label>
      </div>
    </div>

  </form>

</div>

<button id="submit-btn" class="btn" type="submit">Sign Up</button>

<script src="/js/signup.js"></script>
